{
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@ecommerce/*": ["../../../apps/*/src"],
      "@ecommerce/config": ["../../../config"],
      "@ecommerce/validators": ["../../../validators/src"],
      "@ecommerce/ui": ["../../../ui/src"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}