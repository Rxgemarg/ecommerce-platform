      "item": [
        {
          "name": "Create Product Type",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Clothing\",\n  \"slug\": \"clothing\",\n  \"schema_json\": {\n    \"fields\": [\n      {\n        \"key\": \"material\",\n        \"label\": \"Material\",\n        \"type\": \"enum\",\n        \"options\": [\"Cotton\", \"Polyester\", \"Wool\", \"Silk\"],\n        \"required\": true\n      },\n      {\n        \"key\": \"size\",\n        \"label\": \"Size\",\n        \"type\": \"enum\",\n        \"options\": [\"XS\", \"S\", \"M\", \"L\", \"XL\", \"XXL\"],\n        \"required\": true\n      },\n      {\n        \"key\": \"weight\",\n        \"label\": \"Weight (grams)\",\n        \"type\": \"measurement\",\n        \"unit\": \"g\",\n        \"required\": false\n      },\n      {\n        \"key\": \"care_instructions\",\n        \"label\": \"Care Instructions\",\n        \"type\": \"string\",\n        \"required\": false\n      }\n    ]\n  },\n  \"ui_schema_json\": {\n    \"layout\": \"sections\",\n    \"sections\": [\n      {\n        \"title\": \"Basic Information\",\n        \"fields\": [\"material\", \"size\"]\n      },\n      {\n        \"title\": \"Additional Details\",\n        \"fields\": [\"weight\", \"care_instructions\"]\n      }\n    ]\n  },\n  \"search_facets_json\": {\n    \"facets\": [\n      {\n        \"key\": \"material\",\n        \"label\": \"Material\",\n        \"type\": \"checkbox\"\n      },\n      {\n        \"key\": \"size\",\n        \"label\": \"Size\",\n        \"type\": \"checkbox\"\n      }\n    ]\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/product-types",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product-types"
              ]
            }
          },
